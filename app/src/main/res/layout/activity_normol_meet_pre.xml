<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/pre_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/view_space"
                android:layout_width="match_parent"
                android:layout_height="0dp"></View>
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:src="@drawable/back_white"/>

        </LinearLayout>

        <org.anyrtc.weight.CircleImageView
            android:id="@+id/iv_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/white" />

    </RelativeLayout>


    <RadioGroup
        android:id="@+id/rg_type"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/layout_bg"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="24dp">

        <RadioButton
            android:id="@+id/rb_4_360"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@drawable/selector_normol_meet"
            android:button="@null"
            android:gravity="center"
            android:text="四人会议室 - 360P"
            android:textColor="@color/select_normol_meet" />

        <RadioButton
            android:id="@+id/rb_4_720"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_normol_meet"
            android:button="@null"
            android:gravity="center"
            android:text="四人会议室 - 720P"
            android:textColor="@color/select_normol_meet" />

        <RadioButton
            android:id="@+id/rb_4_1080"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_normol_meet"
            android:button="@null"
            android:gravity="center"
            android:text="四人会议室 - 1080P"
            android:textColor="@color/select_normol_meet" />

        <RadioButton
            android:id="@+id/rb_9_0"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_normol_meet"
            android:button="@null"
            android:gravity="center"
            android:text="九人会议室"
            android:textColor="@color/select_normol_meet" />

        <RadioButton
            android:id="@+id/rb_9_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_normol_meet"
            android:button="@null"
            android:gravity="center"
            android:text="语音会议室 01"
            android:textColor="@color/select_normol_meet" />

        <RadioButton
            android:id="@+id/rb_9_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_normol_meet"
            android:button="@null"
            android:gravity="center"
            android:text="语音会议室 02"
            android:textColor="@color/select_normol_meet" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" />


    </RadioGroup>

</LinearLayout>
